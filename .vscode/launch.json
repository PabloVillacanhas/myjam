{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Attach to Chrome",
			"port": 9223,
			"request": "attach",
			"type": "pwa-chrome",
			"webRoot": "${workspaceFolder}/src"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Mocha Tests",
			"program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
			"args": [
				"--require",
				"esm",
				"--reporter",
				"dot",
				"--slow",
				"5000",
				"--colors",
				"${workspaceFolder}/test/**/*.spec.js",
			],
			"internalConsoleOptions": "openOnSessionStart",
			"skipFiles": [
				"<node_internals>/**"
			]
		},
	]
}